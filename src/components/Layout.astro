---
import Base from './Base.astro';

interface Props {
    title: string;
    description: string;
    ogId?: string;
}
---

<Base
    title={Astro.props.title}
    description={Astro.props.description}
    ogId={Astro.props.ogId}
>
    <div class="mx-auto max-w-3xl px-4 text-zinc-800 antialiased">
        <header class="flex place-content-between place-items-center pb-2 pt-6">
            <a class="block" href="/">
                <img
                    src="/profile.png"
                    alt="profile picture"
                    class="h-8 w-8 rounded-full bg-zinc-100 transition-transform duration-200 ease-in-out hover:scale-110 sm:h-10 sm:w-10"
                /></a
            >
            <div class="flex gap-x-4 text-zinc-800">
                <a href="/blog" class="hover:text-main hover:underline">Blog</a>
                <a
                    href="https://twitter.com/skdishansachin"
                    class="hover:text-main hover:underline">Twitter</a
                >
                <a
                    href="https://github.com/skdishansachin"
                    class="hover:text-main hover:underline">Github</a
                >
            </div>
        </header>
        <main class="pb-32 pt-8 leading-relaxed sm:pt-12">
            <slot />
        </main>
    </div>
</Base>
