---
import Layout from "@layouts/Layout.astro";
import { lightFormat } from "date-fns";
const title = "Blog | Dishan Sachin";
const description =
  "Check out my thoughts on software development, tools, and other cool stuff.";

import { getCollection } from "astro:content";

const posts = await getCollection("posts", ({ data }) => {
  return data.status !== "draft";
});
---

<Layout title={title} description={description}>
  <h1 class="font-medium text-3xl mb-8 tracking-tighter">Latest</h1>
  {
    posts.map((post) => (
      <a class="flex flex-col space-y-1 mb-4" href={`/blog/${post.slug}`}>
        <div class="w-full flex flex-col space-y-5">
          <p class="text-2xl text-neutral-900 dark:text-neutral-100 tracking-tight">
            {post.data.title}
          </p>
          <p class="text-neutral-600 dark:text-neutral-400 tracking-tight">
            {post.data.description}
          </p>
          <p class="text-neutral-600 dark:text-neutral-400">
            {lightFormat(
              new Date(post.data.publishedAt.toLocaleDateString()),
              "yyyy-MM-dd",
            )}
          </p>
        </div>
      </a>
    ))
  }
</Layout>
