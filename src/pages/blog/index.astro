---
import Layout from '@components/Layout.astro';

import { getCollection } from 'astro:content';

const posts = await getCollection('posts', ({ data }) => {
    return data.status === 'published';
});
---

<Layout title="Dishan Sachin | Blog" description="Read my blog.">
    <h1
        class="font-sans text-3xl font-semibold tracking-tight text-black dark:text-white"
    >
        I write ⌨️
    </h1>
    <ul class="list-disc">
        {
            posts.map((post) => {
                return (
                    <li class="pt-5">
                        <a
                            href={`/blog/${post.slug}`}
                            class="font-serif text-xl text-black hover:underline dark:text-white"
                        >
                            {post.data.title}
                        </a>
                        <p class="font-sans">
                            {new Date(post.data.publishedAt).toLocaleDateString(
                                'en-US',
                            )}
                        </p>
                    </li>
                );
            })
        }
    </ul>
</Layout>
