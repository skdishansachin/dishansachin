---
import { getCollection, type CollectionEntry } from 'astro:content';
import { lightFormat } from 'date-fns';

import MarkdownLayout from '@layouts/MarkdownLayout.astro';

export async function getStaticPaths() {
    const posts = await getCollection('posts');
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: post,
    }));
}
type Props = CollectionEntry<'posts'>;

const post = Astro.props;
const { Content } = await post.render();

if (post.data.status === 'draft') {
    return Astro.redirect('/blog');
}
---

<MarkdownLayout {...post.data}>
    <h1 class="text-4xl font-bold tracking-tighter">
        {post.data.title}
    </h1>
    <div class="mb-8 mt-2 flex items-center space-x-5 text-base text-neutral-600 dark:text-neutral-400">
        <p>
            {
                lightFormat(
                    new Date(post.data.publishedAt.toLocaleDateString()),
                    'yyyy-MM-dd',
                )
            }.
        </p>
        <p class="">2 Minute read.</p>
    </div>
    <article class="prose prose-xl prose-neutral dark:prose-invert">
        <Content />
    </article>
</MarkdownLayout>
