---
import { getCollection, type CollectionEntry } from 'astro:content';

import Layout from '@components/Layout.astro';
import { formatDate } from '@utils/format';

export async function getStaticPaths() {
    const posts = await getCollection('posts');
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: post,
    }));
}
type Props = CollectionEntry<'posts'>;

const post = Astro.props;
const { Content } = await post.render();

if (post.data.status === 'draft') {
    return Astro.redirect('/');
}
---

<Layout title={post.data.title} description={post.data.description}>
    <h1 class="text-4xl font-bold tracking-tighter">{post.data.title}</h1>
    <p class="mt-4 text-lg text-zinc-450">
        {formatDate(post.data.publishedAt)}
    </p>
    <!-- by default the code block font set arround 14px I have changed it to `text-base` -->
    <div id="md" class="prose lg:prose-lg prose-code:text-base mt-4">
        <Content />
    </div>
</Layout>

<style lang="postcss">
	:global(#md .astro-code) {
		@apply !leading-tight;
	}
</style>
