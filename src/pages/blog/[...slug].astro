---
import { getCollection, type CollectionEntry } from 'astro:content';
import { lightFormat } from 'date-fns';

import MarkdownLayout from '@layouts/MarkdownLayout.astro';

export async function getStaticPaths() {
    const posts = await getCollection('posts');
    return posts.map((post) => ({
        params: { slug: post.slug },
        props: post,
    }));
}
type Props = CollectionEntry<'posts'>;

const post = Astro.props;
const { Content } = await post.render();

if (post.data.status === 'draft') {
    return Astro.redirect('/blog');
}
---

<MarkdownLayout {...post.data}>
    <h1 class="title max-w-[650px] text-3xl font-bold tracking-tighter">
        {post.data.title}
    </h1>
    <div
        class="mb-8 mt-2 flex max-w-[650px] items-center justify-between text-sm"
    >
        <p class="text-sm text-neutral-600 dark:text-neutral-400">
            {
                lightFormat(
                    new Date(post.data.publishedAt.toLocaleDateString()),
                    'yyyy-MM-dd',
                )
            }
        </p>
    </div>
    <article class="prose prose-neutral dark:prose-invert">
        <Content />
    </article>
</MarkdownLayout>
