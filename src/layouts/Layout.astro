---
const { title } = Astro.props;

import Navbar from "@components/Navbar.astro";
---

<html lang="en" class="text-black bg-white dark:text-white dark:bg-[#111010]">
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body
    class="antialiased max-w-2xl mb-40 flex flex-col md:flex-row mx-4 mt-8 lg:mx-auto"
  >
    <main class="flex-auto min-w-0 mt-6 flex flex-col px-2 md:px-0">
      <Navbar />
      <slot />
    </main>
  </body>
</html>
